server {
  listen 80;
  listen [::]:80;
  server_name {{ admin_site.host_name }};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name {{ admin_site.host_name }};

  ssl_certificate /etc/ssl/certs/{{ admin_site.host_name }}.pem;
  ssl_certificate_key /etc/ssl/private/{{ admin_site.host_name }}.key;

  client_max_body_size 1m;

  location / {
    proxy_pass http://localhost:{{admin_site.local_port}}/;
    proxy_set_header X-Real-IP $remote_addr;
  }
}
