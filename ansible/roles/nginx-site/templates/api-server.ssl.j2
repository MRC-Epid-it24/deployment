server {
  listen 80;
  listen [::]:80;
  server_name {{ api_server.host_name }};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name {{ api_server.host_name }};

  ssl_certificate /etc/ssl/certs/{{ api_server.host_name }}.pem;
  ssl_certificate_key /etc/ssl/private/{{ api_server.host_name }}.key;

  client_max_body_size 16m;
  
  location / {
    proxy_pass http://localhost:{{api_server.local_port}}/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
  }
}

